<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/white" android:padding="@dimen/dp_5">
    <TextView
        android:id="@+id/item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_x"
        android:padding="@dimen/dp_2"
        android:text="小数点"/>
    <TextView
        android:id="@+id/item_user_age"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_toRightOf="@id/item_user_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_x"
        android:background="@drawable/round_green_bg"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:text="50岁"/>
    <TextView
        android:id="@+id/item_user_tag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_toRightOf="@id/item_user_age"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_x"
        android:background="@drawable/round_red_bg"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:text="高"/>
    <TextView
        android:id="@+id/item_user_sex"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@id/item_user_name"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_x"
        android:padding="@dimen/dp_2"
        android:text="男"/>
    <TextView
        android:id="@+id/item_user_idcard"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_toRightOf="@id/item_user_sex"
        android:layout_alignTop="@id/item_user_sex"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_x"
        android:padding="@dimen/dp_2"
        android:text="320921198819222222"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:background="@color/color29" />
</RelativeLayout>