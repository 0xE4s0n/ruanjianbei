<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:gravity="center_vertical"
    android:background="@drawable/item_form_white"
    android:paddingLeft="@dimen/dp_5"
    android:paddingRight="@dimen/dp_5"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_data_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:minWidth="@dimen/dp_90"
        android:text="name"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/item_data_value"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_weight="1"
        android:background="@drawable/white_round_stroke_bg"
        android:drawableRight="@drawable/btn_right"
        android:drawablePadding="@dimen/dp_4"
        android:gravity="center_vertical|right"
        android:padding="@dimen/dp_4"
        android:textColor="@color/c6" />
</LinearLayout>