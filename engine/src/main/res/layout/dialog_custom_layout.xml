<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:padding="@dimen/dp_20"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parentPanel_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_dialog_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_custom_title"
            style="@style/dialog_custom_title_text_style"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:singleLine="true"
            android:text="Android App" />

        <View
            android:layout_height="0.1dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#ffdcdcdc" />

        <TextView
            android:id="@+id/dialog_custom_content"
            style="@style/dialog_custom_content_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dialog_content_margin_left"
            android:layout_marginTop="@dimen/dialog_content_margin_left"
            android:layout_marginLeft="@dimen/dialog_content_margin_left"
            android:layout_marginRight="@dimen/dialog_content_margin_right"
            android:gravity="center"
            android:text="Android content" />

        <View
            android:id="@+id/line_hor"
            android:layout_height="0.1dp"
            android:layout_width="match_parent"
            android:background="#ffdcdcdc" />

        <include layout="@layout/dialog_custom_bottom_layout" />
    </LinearLayout>
</LinearLayout>