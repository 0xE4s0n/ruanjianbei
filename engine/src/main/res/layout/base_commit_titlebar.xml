<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/base_action_ly"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/action_left"
        style="@style/titleIcContentStyle"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:src="@drawable/btn_back"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <com.android.zxb.engine.view.ColorTextView
        android:id="@+id/action_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/action_left"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_x" />

    <com.android.zxb.engine.view.ColorTextView
        android:id="@+id/action_center_title"
        style="@style/app_text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/action_btn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/blue_btn_smallradius_selector"
        android:enabled="false"
        android:layout_margin="@dimen/dp_10"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white" />
</RelativeLayout>